{{> administrator_sidebar}}
<div class="ui fluid container" style="margin-top: 5%;">
	<div class="ui centered grid">
		<div class="thirteen wide centered column" style="padding-left:5%;">
      <h3 class="ui center aligned icon header">
        <i class="lab icon"></i>
        <div class="content">
          Laboratory User List
          <div class="sub header">Manage your laboratory users' preferences.</div>
        </div>
      </h3>

			<div class="ui one column stackable cards" style="margin-top: 2.5%;">
        <table class="ui celled table">
          <thead>
            <tr>
              <th>Username</th>
              <th>Full Name</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each users}}
              <tr>
                <td>{{ this.username }}</td>
                <td>{{ this.full_name }}</td>
                <td>
									<a class="ui circular basic red icon button" href="/lab/userList/{{ ../idlab }}/remove/{{ this.iduser }}"><i class="trash icon"></i></a>
                </td>
              </tr>
            {{/each}}
          </tbody>
          <tfoot>
            <tr>
              <th colspan="3">
                <div class="ui left floated text menu">
                  <a class="ui compact large labeled blue icon button" href="#" onclick="assignUsers();">
                    <i class="plus icon"></i>
                    Assign User(s)
                  </a>
                  <a class="ui compact large red button" href="/lab">
                    Back
                  </a>
                </div>
                <div class="ui right floated pagination menu">
                  <a class="icon item">
                    <i class="left chevron icon"></i>
                  </a>
                  <a class="item">1</a>
                  <a class="item">2</a>
                  <a class="item">3</a>
                  <a class="item">4</a>
                  <a class="icon item">
                    <i class="right chevron icon"></i>
                  </a>
                </div>
              </th>
            </tr>
          </tfoot>
        </table>
      </div>
		</div>
	</div>
</div>

<div class="ui modal">
  <i class="close icon"></i>
  <div class="header">
    Assign User(s)
  </div>
  <div class="content">
    <div class="description">
      {{#form url class="ui form"}}
        <div class="field">
          {{label "userList[]" "Users"}}
          {{select "userList[]" userList selected class="ui fluid search dropdown"}}
        </div>
        <div class="actions">
          {{submit "submit" "Assign to lab" class="ui large blue icon button"}}
          <div class="ui large red deny button">
            Cancel
          </div>
        </div>
      {{/form}}
    </div>
  </div>


</div>

<script>
	$(document).ready(function(){
		$('.ui.dropdown').dropdown();
	});

  function assignUsers() {
    $('.ui.modal').modal('show');
  }
</script>
